@model FirstMvc.Models.GetResponses

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.css"rel="stylesheet"/>
    <link href="~/Content/bootstrap.css"rel="stylesheet" />

    <title>Register</title>
    <style>
        .field-validation-error{color:#f00;}
        .field-validation-valid{display:none;}
        .input-validation-error{border:1px solid #00ff21;background-color:#fee;}
        .validation-message-error{font-weight:bold;color:#f00;}
    </style>
</head>
<body>
    <div class="panel panel-success" style="width:40%">
        <div class="panel panel-heading text-center"><h3>Register</h3></div>
        <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <p>Your Name: @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) @Html.ValidationMessageFor(x => x.Name, "")</p>
            </div>
            <div class="form-group">
                <p>Your email: @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })@Html.ValidationMessageFor(x => x.Email, "")</p>
            </div>
            <div class="form-group">
                <p>Your Phone: @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })@Html.ValidationMessageFor(x => x.Phone, "")</p>
            </div>
            <P>
                <label>
                    Will You Attend ?
                </label>
                @Html.ValidationMessageFor(x => x.WillAttend, "")
                @Html.DropDownListFor(x => x.WillAttend, new[]{
                 new SelectListItem(){Text="Yes, I will Attend",
                     Value=bool.TrueString },
                 new SelectListItem(){Text="No, I catn't Attend",
                     Value=bool.FalseString }
                     },"Choose an option", new { @class = "form-control" })


            </P>
            <div class="text-center">
                <input type="submit" value="Submit" />
            </div>

        }
    </div>

    </div>
</body>
</html>
